.flierWrapper.panel.contentWrapper
    .mainSection
        .photoWrapper
            -if ($missingInfo['childPhoto']):
                img(src=$missingInfo['childPhoto'])
        .childData
            h1.childName=missingInfo['child']->name
            .row
                span.fieldName Date of birth:
                !=' '
                -$birthday = date('F d, Y', strtotime($missingInfo['child']->birthday))
                =birthday
            .row
                span.fieldName Missing date:
                !=' '
                =missingInfo["date"]
            .row
                span.fieldName Age at time of disappearance:
                !=' '
                =missingInfo['age']
            .row
                span.fieldName Sex:
                !=' '
                =missingInfo['child']->gender
            .row
                span.fieldName Race:
                !=' '
                =missingInfo['child']->ethnicity->name
            .row
                span.fieldName Eyes:
                !=' '
                =missingInfo['child']->eyesColor->name
            .row
                span.fieldName Hair:
                !=' '
                =missingInfo['child']->hairColor->name

            -$heightFeet   = $missingInfo['child']->height_feet   ? $missingInfo['child']->height_feet   . "'" : "";
            -$heightInches = $missingInfo['child']->height_inches ? $missingInfo['child']->height_inches . '"' : '';
            -$height = $heightFeet . $heightInches
            -if ($height):
                .row
                    span.fieldName Height:
                    !=' '
                    =height
            -if ($missingInfo['child']->weight):
                .row
                    span.fieldName Weight:
                    !=' '
                    =missingInfo['child']->weight
            -if ($missingInfo["from"]):
                .row
                    span.fieldName Missing from:
                    !=' '
                    =missingInfo["from"]

