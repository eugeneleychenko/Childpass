        div.row
            h3 Video Demo of Your Kit
        div.row
            h3 Feedback
            -$form=$this->beginWidget('CActiveForm', array('id' => 'survey_form'));
            div
                div.left
                    !=$form->labelEx($model, 'like_survey');
                    br
                    !=$form->radioButton($model, 'like_survey', array('value'=> 'I like it!'));
