                        label 1
                        !=$form->radioButton($model, 'kit_rate', array('value'=> '1'));
                        label 2
                        !=$form->radioButton($model, 'kit_rate', array('value'=> '2'));
                        label 3
                        !=$form->radioButton($model, 'kit_rate', array('value'=> '3'));
                        label 4
                        !=$form->radioButton($model, 'kit_rate', array('value'=> '4'));
                        label 5
                        !=$form->radioButton($model, 'kit_rate', array('value'=> '5'));
                        !=$form->error($model, 'kit_rate')

        div
            !=CHtml::submitButton('submit');
            -$this->endWidget();

